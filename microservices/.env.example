# WOLO Microservices Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# CORE INFRASTRUCTURE
# ================================

# Node.js Environment
NODE_ENV=production

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# JWT Configuration  
JWT_SECRET=your_super_strong_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ================================
# MICROSERVICE PORTS
# ================================

API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
POT_SERVICE_PORT=3002
SPONSORSHIP_SERVICE_PORT=3003
PAYMENT_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005
IDENTITY_SERVICE_PORT=3006
ANALYTICS_SERVICE_PORT=3007

# ================================
# PAYMENT INTEGRATION - WAVE
# ================================

WAVE_API_URL=https://api.wave.com
WAVE_API_KEY=your_wave_api_key
WAVE_SECRET_KEY=your_wave_secret_key
WAVE_WEBHOOK_SECRET=your_wave_webhook_secret

# ================================
# WHATSAPP BUSINESS API
# ================================

WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_API_VERSION=v18.0

# ================================
# EMAIL SERVICE - SENDGRID
# ================================

SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@wolosenegal.com
SENDGRID_FROM_NAME=WOLO Senegal

# ================================
# SOCIAL LOGIN PROVIDERS
# ================================

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth  
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Apple OAuth
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# ================================
# SMS SERVICE (OPTIONAL)
# ================================

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Or Orange SMS API (Senegal)
ORANGE_SMS_CLIENT_ID=your_orange_client_id
ORANGE_SMS_CLIENT_SECRET=your_orange_client_secret

# ================================
# CLOUD STORAGE (FOR DOCUMENTS)
# ================================

# AWS S3 (for document storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=wolo-documents-bucket

# Or Supabase Storage
SUPABASE_STORAGE_BUCKET=identity-documents

# ================================
# MONITORING & ANALYTICS
# ================================

# Google Analytics
GA_TRACKING_ID=your_google_analytics_id

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# ================================
# LOGGING CONFIGURATION
# ================================

LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ================================
# SECURITY CONFIGURATION
# ================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=30

# ================================
# BUSINESS CONFIGURATION
# ================================

# Points System
POINTS_TO_CFA_RATE=100
REFERRAL_BONUS_POINTS=10
IDENTITY_VERIFICATION_BONUS_POINTS=5

# Age Restrictions
MIN_AGE_WITHOUT_GUARDIAN=18
POT_CREATION_DAYS_BEFORE_BIRTHDAY=30

# WhatsApp Limits
MAX_CONTACTS_IMPORT=1000
MAX_BULK_MESSAGE_RECIPIENTS=100

# ================================
# SERVICE DISCOVERY (OPTIONAL)
# ================================

CONSUL_HOST=localhost
CONSUL_PORT=8500

# ================================
# PRODUCTION SETTINGS
# ================================

# Domain Configuration
FRONTEND_URL=https://wolosenegal.com
API_BASE_URL=https://api.wolosenegal.com

# CORS Origins (comma-separated)
CORS_ORIGINS=https://wolosenegal.com,https://www.wolosenegal.com,https://app.wolosenegal.com

# SSL Certificate Paths (if using HTTPS)
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key