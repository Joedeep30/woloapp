
# Configuration de base pour éviter les erreurs de processus - SOLUTION FINALE
NODE_ENV=production
FORCE_PROCESS_EXIT=true

# Configuration PostgREST (à remplir avec vos vraies valeurs)
POSTGREST_URL=your_postgrest_url
POSTGREST_SCHEMA=your_schema
POSTGREST_API_KEY=your_api_key

# Configuration JWT
JWT_SECRET=your_jwt_secret

# Configuration de l'application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Wave Mobile Money (Sandbox/Production)
WAVE_API_URL=https://api.wave.com
WAVE_API_KEY=your_wave_api_key
WAVE_MERCHANT_ID=your_merchant_id
WAVE_WEBHOOK_SECRET=your_webhook_secret

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_API_VERSION=v18.0
NEXT_PUBLIC_APP_NAME=WOLO SENEGAL
NEXT_PUBLIC_ENABLE_AUTH=false

# Configuration pour le nettoyage des processus - SOLUTION FINALE
CLEANUP_TIMEOUT=1000
MAX_CLEANUP_RETRIES=1
BUILD_TIMEOUT=15000

# Configuration pour éviter les processus bloqués - SOLUTION FINALE
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT_PLUGIN=true

# Configuration mémoire pour le build - OPTIMISÉE
NODE_OPTIONS=--max-old-space-size=1024 --force-exit

# NOUVELLES VARIABLES POUR FORCER LA SORTIE PROPRE
FORCE_BUILD_EXIT=true
BUILD_MAX_DURATION=15000
PROCESS_CLEANUP_AGGRESSIVE=true
